{
  "compilerOptions": {
    "target": "es2017",
    "module": "none",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*",
    "tool/**/*",
    "example/**/*",
    "playground/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}